<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/itemSizeText"
        android:layout_width="133dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toEndOf="@+id/itemPriceText"
        app:layout_constraintTop_toBottomOf="@+id/itemLocationText" />

    <HorizontalScrollView
        android:id="@+id/imageScrollView"
        android:layout_width="361dp"
        android:layout_height="425dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/itemNameText"
        android:layout_width="134dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageScrollView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/itemPriceText"
        android:layout_width="133dp"
        android:layout_height="31dp"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="512dp" />

    <TextView
        android:id="@+id/itemLocationText"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.356"
        app:layout_constraintStart_toEndOf="@+id/itemNameText"
        app:layout_constraintTop_toBottomOf="@+id/imageScrollView" />

    <TextView
        android:id="@+id/itemDescriptionText"
        android:layout_width="352dp"
        android:layout_height="131dp"
        android:layout_marginEnd="24dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemPriceText"
        app:layout_constraintVertical_bias="0.421" />
</androidx.constraintlayout.widget.ConstraintLayout>